#!/usr/bin/env bash
# Manage logout with rofi
option=`echo -e "lock screen\nlogout\nsuspend\nreboot\npoweroff\nKill user $USER" | rofi -width 600 -dmenu -p system:`
case $option in
    'lock screen')
        i3lock -i /home/sam/Pictures/lockscreen.png
        ;;
    logout)
        i3-nagbar -t warning -m 'Are you sure you  want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'
        ;;
    suspend)
        i3lock -i /home/sam/Pictures/lockscreen.png
        sudo  /usr/bin/systemctl suspend
        ;;
    reboot)
        sudo /usr/bin/systemctl reboot
        ;;
    poweroff)
        sudo /usr/bin/systemctl poweroff
        ;;
    'kill user $USER')
        loginctl kill-user $USER
        ;;
esac
